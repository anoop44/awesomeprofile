<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/recyclerview"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>


        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@id/headerImageView"
            android:layout_height="150dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@+id/avatarImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="2dp"
            motion:layout_constraintBottom_toBottomOf="@+id/headerImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/headerImageView">

            <PropertySet motion:visibilityMode="ignore" />

            <CustomAttribute
                motion:attributeName="CornerRadius"
                motion:customIntegerValue="10" />

        </Constraint>

        <Constraint
            android:id="@id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/avatarImageView"
            motion:visibilityMode="ignore" >
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">


        <Constraint
            android:id="@id/headerImageView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" >
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@+id/avatarImageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:elevation="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/headerImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.97"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/headerImageView">
            <PropertySet motion:visibilityMode="ignore" />

            <CustomAttribute
                motion:attributeName="CornerRadius"
                motion:customIntegerValue="100" />

        </Constraint>

        <Constraint
            android:id="@id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/avatarImageView"
            motion:layout_constraintEnd_toStartOf="@id/avatarImageView"
            motion:layout_constraintHorizontal_bias="0.95"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/avatarImageView" >
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>

</MotionScene>
